generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Alert {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  symbol         String   // e.g., "EURUSD", "XAUUSD"
  tv_symbol      String   // e.g., "OANDA:EURUSD"
  api_symbol     String   // e.g., "EUR%2FUSD"
  label          String   // Live, Super, Good, Bad, Formation, Other
  alertLabel     String   @default("") // User's custom label for this alert
  price          Float
  type           String   // crossing_up, crossing_down
  status         String   @default("active") // active, triggered, expired
  createdAt      DateTime @default(now())
  expirationDate DateTime?
  triggeredAt    DateTime?
  
  @@index([status])
  @@index([symbol])
  @@index([createdAt])
}

model BiasAnalysis {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  symbol    String   @unique
  direction String   // BULLISH, BEARISH, NEUTRAL
  analysis  String   // Full analysis text from Gemini
  justification String // Single sentence summary
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([updatedAt])
}

model BiasSheet {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  symbol     String   @unique
  bias       String   @default("neutral") // green, red, yellow
  usdBias    String   @default("neutral") // green, red, yellow
  pdCandle   String   @default("neutral") // green, red, yellow
  direction  String   @default("neutral") // green, red, yellow
  htfTrend   String   @default("neutral") // green, red, yellow
  ltfTrend   String   @default("neutral") // green, red, yellow
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
